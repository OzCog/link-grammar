%%%%%%%%%%%%%%%%%%%%
% Verb
%%%%%%%%%%%%%%%%%%%%

<core-of-verb> :
    {@hAX-}
    & (
        (hS- & ([TP-] or ()))
        or [()]
    )
    & {hAVpl-}
    & {hAVtl-}
    & {hAVcl-};

<verb-start> :
    <core-of-verb>
    & (<left-wall-sent> or JVr-)
    & (hO+ or [()])
    & (
        ({@hAV+} & <right-wall>)
        or [VZ+] 
        or ({@hAV+} & JVl+)
    );

<passive-marker> :
    <core-of-verb>
    & (<left-wall-sent> or JVr-)
    & (hO+ or [()])
    & hVC+;

<verb-intrans> :
    <core-of-verb>
    & (<left-wall-sent> or JVr-)
    & (
        ({@hAV+} & {@hAV-} & <right-wall>)
        or [VZ+]
        or ({@hAV+} & JVl+)
    );

<verb-serial> :
    VZ-
    & (hO+ or [()])
    & {@hAV+}
    & (<right-wall> or VZ+);

<verb-control> :
    dVC-
    & (hO+ or [()])
    & {@hAV+}
    & (<right-wall> or VZ+);

<verb-comp> :
    {@hAX-}
    & {hS- & ([TP-] or ())}
    & {hAVpl-}
    & {dPC- or dRC- or dZN-}
    & (hO+ or [()])
    & {@hAV+}
    & {[VZ+]};

<verb-imprel> :
    [dRI-]
    & (hO+ or [()])
    & {[hAV+]};

<verb-simple> :
    (
        {[[PUsl-]]}
        & {[[PUsr+]]}
        & (<verb-start> or <verb-serial> or <verb-comp>)
    )
    or <verb-control>
    or [<verb-imprel>];

<verb-simple-intrans> :
    {[[PUsl-]]}
    & {[[PUsr+]]}
    & <verb-intrans>;

%%%% Common Verb %%%%

/th/words/words.v.common 
W-VERB :
    <verb-simple>;

%%%% Passive Marker %%%%

/th/words/words.passmark 
